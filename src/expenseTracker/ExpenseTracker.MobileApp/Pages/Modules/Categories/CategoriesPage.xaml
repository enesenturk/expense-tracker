<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.MobileApp.Pages.Modules.Categories.CategoriesPage"
             BackgroundColor="White"
             Padding="20">

    <VerticalStackLayout Spacing="10" Padding="20,20,20,20">

        <!-- Başlık -->
        <Label Text="Kategoriler" 
               FontAttributes="Bold" 
               FontSize="28"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>

        <!-- Dinamik Liste -->
        <VerticalStackLayout Spacing="10" VerticalOptions="FillAndExpand">

            <CollectionView x:Name="categoriesCollection"
                    SelectionMode="None"
                    VerticalOptions="FillAndExpand"
                    Margin="0,0,0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                            <Label Text="{Binding Name}"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"
                           FontSize="18"/>
                            <Button Text="−"
                            TextColor="White"
                            BackgroundColor="#E74C3C"
                            WidthRequest="50"
                            HeightRequest="50"
                            FontSize="24"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            CornerRadius="25"
                            Clicked="OnDeleteCategoryClicked"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>

        <!-- Yeni kategori ekle -->
        <Button Text="+ Yeni Kategori" 
                BackgroundColor="#512BD4" 
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                Clicked="OnAddCategoryClicked"
                Margin="0,20,0,0"/>
    </VerticalStackLayout>

</ContentPage>
