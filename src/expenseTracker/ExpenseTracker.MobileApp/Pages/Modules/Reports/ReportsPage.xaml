<base:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:base="clr-namespace:ExpenseTracker.MobileApp.Base"
                      x:Class="ExpenseTracker.MobileApp.Pages.Modules.Reports.ReportsPage"
                      xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui">

    <Grid x:Name="gridMain" RowDefinitions="Auto,Auto,Auto,Auto,*" RowSpacing="0" Padding="20,20,20,20">

        <Label x:Name="lblReports" Grid.Row="0" FontSize="26" Margin="0,0,0,20" HorizontalOptions="Center" />

        <Grid Grid.Row="1" ColumnDefinitions="3*,3*,2*" ColumnSpacing="5" Margin="0,0,0,10">
            <Picker x:Name="pickerDateType" SelectedIndexChanged="OnDateTypeChanged" />
            <Picker x:Name="pickerCategory" Grid.Column="1" />
        </Grid>

        <Grid Grid.Row="2" ColumnDefinitions="3*,3*,2*" ColumnSpacing="5" Margin="0,0,0,10">
            <DatePicker x:Name="dpStartDate" />
            <DatePicker x:Name="dpEndDate" Grid.Column="1" />
            <Button x:Name="btnSearch" Grid.Column="2" Clicked="OnSearchClicked" />
        </Grid>

        <charts:ChartView Grid.Row="3" x:Name="chartView" HeightRequest="300" Margin="0,40,0,20" />

    </Grid>

</base:BaseContentPage>