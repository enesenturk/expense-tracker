<base:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:base="clr-namespace:ExpenseTracker.MobileApp.Base"
                      x:Class="ExpenseTracker.MobileApp.Pages.Modules.Home.HomePage">

    <Grid x:Name="gridMain" VerticalOptions="Fill" HorizontalOptions="Fill" Padding="20,20,20,20">

        <VerticalStackLayout VerticalOptions="Start" HorizontalOptions="Center" Margin="0, 40, 0, 0">

            <Label x:Name="lblMonthlyTitle" FontSize="20" HorizontalTextAlignment="Center"/>
            <Label x:Name="lblMonthlyAmount" FontSize="30" FontAttributes="Bold" HorizontalTextAlignment="Center"/>

        </VerticalStackLayout>

        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">

            <Frame x:Name="btnFrame"
                   WidthRequest="300"
                   HeightRequest="300"
                   CornerRadius="150"
                   HasShadow="False"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">

                <Button x:Name="btnAddExpense"
                        BackgroundColor="Transparent"
                        WidthRequest="300"
                        HeightRequest="300"
                        CornerRadius="150"
                        FontSize="30"
                        Clicked="OnAddExpenseClicked"/>
            </Frame>

        </VerticalStackLayout>

    </Grid>

</base:BaseContentPage>
