<base:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:base="clr-namespace:ExpenseTracker.MobileApp.Base"
             x:Class="ExpenseTracker.MobileApp.Pages.Modules.HomePage">

    <!-- Grid TÜM EKRANI KAPLAR -->
    <Grid x:Name="gridMain" VerticalOptions="Fill" HorizontalOptions="Fill">

        <!-- Ortadaki daire -->
        <Frame x:Name="btnFrame"
               WidthRequest="300"
               HeightRequest="300"
               CornerRadius="150"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               HasShadow="False">

            <Button x:Name="btnAddExpense"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    WidthRequest="300"
                    HeightRequest="300"
                    CornerRadius="150"
                    FontSize="30"
                    Clicked="OnAddExpenseClicked"/>
        </Frame>

    </Grid>

</base:BaseContentPage>
