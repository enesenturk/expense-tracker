<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.MobileApp.Pages.Modules.PreferencesPage"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10" Padding="20,20,20,20" BackgroundColor="#EBEBEB">

        <Label x:Name="lblPreferences" Grid.Row="0" FontSize="26" HorizontalOptions="Center" />

        <VerticalStackLayout Grid.Row="1">

            <Label x:Name="lblCurrency" FontAttributes="Bold"/>
            <Picker x:Name="pickerCurrency"/>

            <Label x:Name="lblLanguage" FontAttributes="Bold"/>
            <Picker x:Name="pickerLanguage"/>

            <Label x:Name="lblFirstDayOfWeek" FontAttributes="Bold"/>
            <Picker x:Name="pickerFirstDayOfWeek" ItemDisplayBinding="{Binding Value}" />

        </VerticalStackLayout>

        <Button x:Name="btnSave" Grid.Row="2" BackgroundColor="#512BD4" TextColor="White" 
                FontAttributes="Bold" CornerRadius="10" HeightRequest="50" Clicked="OnSaveClicked" Margin="0,20,0,0"/>

    </Grid>

</ContentPage>